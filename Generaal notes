# –æ—Å–æ–±–∞—è —Å—Ç—Ä–æ–∫–∞  if any(ch.isdigit() for ch in password):

def strength(password):
    if not (password.islower()):
        if len(password)>=8:
            if any(ch.isdigit() for ch in password):
                return "Strong Password"
            else:
                return "Weak Password"
        else:
            return "Weak Password"
    else:
        return "Weak Password"
